<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.minirpg.game.controller.MainMenuController"
           prefHeight="720.0"
           prefWidth="1280.0"
           stylesheets="@font/style.css">

    <children>
        <ImageView fx:id="backgroundImage"
                   fitHeight="720.0"
                   fitWidth="1280.0"
                   preserveRatio="false" />

        <HBox alignment="CENTER" spacing="50.0">
            <padding>
                <Insets top="500.0" />
            </padding>
            <children>

                <Button onAction="#onStartClicked">
                    <graphic>
                        <ImageView fx:id="startBtnImage"
                                   fitWidth="300.0"
                                   preserveRatio="true"
                                   pickOnBounds="true" />
                    </graphic>
                </Button>

                <Button onAction="#onExitClicked">
                    <graphic>
                        <ImageView fx:id="exitBtnImage"
                                   fitWidth="300.0"
                                   preserveRatio="true"
                                   pickOnBounds="true" />
                    </graphic>
                </Button>

            </children>
        </HBox>
    </children>
</StackPane>