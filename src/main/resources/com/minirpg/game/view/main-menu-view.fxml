<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.* ?>


<?import javafx.geometry.Insets?>
<StackPane prefHeight="720.0" prefWidth="1280.0"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.minirpg.game.controller.MainMenuController">
    <children>
        <ImageView fx:id="backgroundImage"
                   fitHeight="720.0"
                   fitWidth="1280.0"
                   preserveRatio="false" />

        <HBox alignment="CENTER" spacing="50.0">
            <padding>
                <Insets top="500.0" />
            </padding>

            <children>
                <Button onAction="#onStartClicked" style="-fx-background-color: transparent; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fx:id="startBtnImage" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>

                <Button onAction="#onExitClicked" style="-fx-background-color: transparent; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fx:id="exitBtnImage" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</StackPane>
