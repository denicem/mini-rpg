<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.minirpg.game.controller.GameController"
           prefWidth="1280" prefHeight="720">

<VBox fx:id="gamePane" alignment="CENTER" spacing="20.0">
<!--    alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" >-->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fx:id="gameSceneView" fitHeight="500.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />

    <Label fx:id="storyText" maxWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.85); /* leichte Bubble */                 -fx-padding: 15; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: black; -fx-font-size: 20px; -fx-text-alignment: center; " wrapText="true">
      <font>
         <Font size="20.0" />
      </font></Label>
    <Button fx:id="choiceButton" onAction="#onChoiceButtonClick" text="Welcome!" />
    <Button fx:id="exitButton" onAction="#onExitButtonClick" text="Go away (Mind your own business.)" />
</VBox>

    <StackPane fx:id="endPane" visible="false" prefWidth="1280" prefHeight="720">

        <ImageView fx:id="endBackgroundView"
                   fitWidth="1280"
                   fitHeight="720"
                   preserveRatio="false" />

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="endTitleLabel"
                   text="THE END"
                   style="-fx-text-fill: white; -fx-font-size: 56px; -fx-font-weight: bold;" />

            <Label fx:id="endSubtitleLabel"
                   text="Ending text"
                   wrapText="true"
                   maxWidth="900"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-text-alignment: center;" />

            <ImageView fx:id="endKnightView"
                       fitHeight="260"
                       preserveRatio="true" />
        </VBox>

        <HBox alignment="CENTER" spacing="16" StackPane.alignment="BOTTOM_CENTER">
            <padding>
                <Insets bottom="30" />
            </padding>
            <Button fx:id="restartButton" text="Restart" onAction="#onRestartButtonClick" prefWidth="160" />
            <Button fx:id="quitButton" text="Quit" onAction="#onQuitButtonClick" prefWidth="160" />
        </HBox>
    </StackPane>
</StackPane>