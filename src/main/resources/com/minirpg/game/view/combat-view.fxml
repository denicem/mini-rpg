<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@font/style.css" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.minirpg.game.controller.CombatController">
    <children>
        <ImageView fx:id="gameSceneView" fitHeight="720.0" fitWidth="1280.0" />

        <HBox alignment="CENTER" spacing="300.0">
            <children>
                <ImageView fx:id="playerImageView" fitHeight="400.0" preserveRatio="true" />
                <ImageView fx:id="enemyImageView" fitHeight="400.0" preserveRatio="true" />
            </children>
        </HBox>

        <VBox alignment="BOTTOM_CENTER" spacing="20.0" style="-fx-padding: 30;">
            <children>
                <Label fx:id="storyText" prefWidth="800.0" style="-fx-background-color: rgba(50,0,0,0.8); -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 15;" text="Combat Log..." />
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <Button onAction="#onAttackClick" prefWidth="180.0" text="Attack!" />
                        <Button onAction="#onPotionClick" prefWidth="180.0" text="Use Potion" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>