<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           prefHeight="720.0" prefWidth="1280.0"
           stylesheets="@font/style.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.minirpg.game.controller.EndScreenController">

    <children>
        <ImageView fx:id="backgroundView"
                   fitHeight="720.0"
                   fitWidth="1280.0" />

        <VBox alignment="CENTER"
              spacing="30.0"
              style="-fx-background-color: rgba(0,0,0,0.7);">

            <children>
                <Label fx:id="titleLabel"
                       style="-fx-font-size: 80px; -fx-text-fill: #ffcc00; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, black, 10, 0, 0, 0);" />

                <ImageView fx:id="characterView"
                           fitHeight="250.0"
                           preserveRatio="true" />

                <Label fx:id="subtitleLabel"
                       maxWidth="800.0"
                       alignment="CENTER"
                       textAlignment="CENTER"
                       style="-fx-font-size: 20px; -fx-text-fill: white;"
                       wrapText="true" />

                <Button onAction="#onCloseButtonClick"
                        prefWidth="250.0"
                        style="-fx-font-size: 20px; -fx-cursor: hand;"
                        text="Exit Game" />
            </children>
        </VBox>
    </children>
</StackPane>