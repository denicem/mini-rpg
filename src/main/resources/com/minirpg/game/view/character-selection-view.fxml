<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.minirpg.game.controller.CharacterSelectionController">
    <children>
        <ImageView fx:id="backgroundImage" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true"/>

        <VBox alignment="CENTER" spacing="30.0">
            <children>
                <Label text="Pick your Hero" style="-fx-font-size: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, black, 10, 0, 0, 0);"/>

                <HBox alignment="CENTER" spacing="100.0">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <Button onAction="#onKnightSelected" style="-fx-background-color: transparent; -fx-cursor: hand;">
                                <graphic>
                                    <ImageView fx:id="knightView" fitHeight="300.0" preserveRatio="true"/>
                                </graphic>
                            </Button>
                            <Label text="Ritter" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <Button onAction="#onKnightGirlSelected" style="-fx-background-color: transparent; -fx-cursor: hand;">
                                <graphic>
                                    <ImageView fx:id="knightGirlView" fitHeight="300.0" preserveRatio="true"/>
                                </graphic>
                            </Button>
                            <Label text="Ritterin" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
