<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.minirpg.game.controller.CharacterSelectionController"
           prefHeight="720.0"
           prefWidth="1280.0"
           stylesheets="@font/style.css">

    <children>
        <ImageView fx:id="backgroundImage"
                   fitHeight="720.0"
                   fitWidth="1280.0"
                   pickOnBounds="true" />

        <VBox alignment="CENTER" spacing="30.0">
            <children>
                <Label styleClass="title-label"
                       style="-fx-effect: dropshadow(three-pass-box, black, 10, 0, 0, 0);"
                       text="Pick your Hero" />

                <HBox alignment="CENTER" spacing="100.0">
                    <children>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button onAction="#onKnightSelected" styleClass="character-button">
                                    <graphic>
                                        <ImageView fx:id="knightView"
                                                   fitHeight="300.0"
                                                   preserveRatio="true"
                                                   pickOnBounds="true" />
                                    </graphic>
                                </Button>
                                <Label text="Sir Alistair" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button onAction="#onKnightGirlSelected" styleClass="character-button">
                                    <graphic>
                                        <ImageView fx:id="knightGirlView"
                                                   fitHeight="300.0"
                                                   preserveRatio="true"
                                                   pickOnBounds="true" />
                                    </graphic>
                                </Button>
                                <Label text="Lady Lala" />
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>